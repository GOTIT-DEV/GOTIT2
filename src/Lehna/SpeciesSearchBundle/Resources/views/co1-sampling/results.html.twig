{# CO1 sampling query results template #}

{% trans_default_domain 'queries' %}

<div class="table-responsive-md">
  <table id="result-table" class="table table-condensed table-hover table-striped" style="width:100%">
    <thead>
      <tr>
        <th colspan="2"></th>
        <th colspan="3">
          {{"columns.sampling.specimen" | trans}}
        </th>

        {# adjust COI column number with regards to the presence of "download" column #}
        <th colspan="{{ is_granted('ROLE_COLLABORATION') ? 3 : 2}}">
          {{"columns.sampling.co1" | trans}}
        </th>
        <th></th>
      </tr>
      <tr>
        <th></th>
        <th class="all" id="col-taxname">
          {{"columns.taxon" | trans}}
        </th>
        <th>{{"columns.stations" | trans}}</th>
        <th>{{"columns.lmp" | trans}}</th>
        <th>{{"columns.mle" | trans}}</th>
        <th>{{"columns.stations" | trans}}</th>
        <th>{{"columns.lmp" | trans}}</th>
        <th>{{"columns.mle" | trans}}</th>
        <th class="all" id="col-details">
          {{"columns.loc" | trans}}
        </th>
        {% if is_granted("ROLE_COLLABORATION") %}
          <th class="all">{{"columns.download"}}</th>
        {% endif %}
      </tr>
    </thead>
    <tbody></tbody>
  </table>
</div>
