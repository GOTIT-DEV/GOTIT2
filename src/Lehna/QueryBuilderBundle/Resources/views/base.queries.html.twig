{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<!-- Bootstrap toggle -->
	<link
	href="{{ asset('e3s/vendors/bootstrap-toggle/css/bootstrap-toggle.min.css') }}" rel="stylesheet">
	<!-- Bootstrap select -->
	<link
	href="{{ asset('e3s/vendors/bootstrap-select/dist/css/bootstrap-select.min.css') }}" rel="stylesheet">
	<!-- Datatables -->
	<link
	href="{{ asset('e3s/vendors/datatables/datatables.min.css') }}" rel="stylesheet">
	<!-- Custom Theme Style -->
	<link
	href="{{ asset('bundles/lehnaspeciessearch/css/common.css') }}" rel="stylesheet">
	<!-- Datatables Style -->
	<link
	href="{{ asset('bundles/lehnaspeciessearch/css/datatables-custom.css') }}" rel="stylesheet">
	<!-- Database Image QueryBuilder Style -->
	<link href="{{ asset('bundles/lehnaquerybuilder/css/db-img.css') }}" rel="stylesheet">
	<!-- Bottom of the QueryBuilder Form Buttons Style -->
	<link href="{{ asset('bundles/lehnaquerybuilder/css/form-end.css') }}" rel="stylesheet">
	<!-- Header of QueryBuilder Form Style -->
	<link href="{{ asset('bundles/lehnaquerybuilder/css/header.css') }}" rel="stylesheet">
	<!-- Initial QueryBuilder Block Style -->
	<link href="{{ asset('bundles/lehnaquerybuilder/css/initial.block.css') }}" rel="stylesheet">
	<!-- Join QueryBuilder Blocks Style -->
	<link href="{{ asset('bundles/lehnaquerybuilder/css/join.blocks.css') }}" rel="stylesheet">
{% endblock %}

{% block headincl %}{% endblock %}

{% block titlepage %}
	<div class="clearfix"></div>
{% endblock %}

{% block action %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="clearfix"></div>
{% endblock %}

{% block link %}
	<div class="clearfix"></div>
{% endblock %}


{% block scripts %}
  {{ parent() }}
  <!-- Symfony javascript routing bundle -->
  <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
  <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
  {# Symfony translation in JS #}
  <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
  <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'queries', 'locales': 'fr,en' }) }}"></script>
  <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'messages', 'locales': 'fr,en' }) }}"></script>
  <!-- Datatables -->
  <script src="{{ asset('e3s/vendors/datatables/datatables.min.js') }}"></script>
  <!-- Bootstrap Toggle -->
  <script src="{{ asset('e3s/vendors/bootstrap-toggle/js/bootstrap-toggle.min.js') }}"></script>
  <!-- Bootstrap select -->
  <script src="{{ asset('e3s/vendors/bootstrap-select/dist/js/bootstrap-select.min.js') }}"></script>
	<!-- ElevateZoom -->
	<script src="{{ asset('e3s/vendors/elevatezoom/jquery.elevatezoom.js') }}"></script>
	<!-- InputMask -->
	<script type="text/javascript" src="{{ asset('e3s/vendors/jquery.inputmask/dist/min/inputmask/inputmask.min.js') }}"></script>
{% endblock %}
