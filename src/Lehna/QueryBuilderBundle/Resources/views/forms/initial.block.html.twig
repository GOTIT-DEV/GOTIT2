{# Form component for the initial block of the QueryBuilder #}

{% trans_default_domain 'queries' %}

<div class="panel panel-default">
  <div class="panel-heading initial-header">
    <div class="first-table-selection">
      <div class="form-group">
        <label class="control-label" for="niveau">
          {% trans %}
          Tables
          {% endtrans %}
        </label>
        <select id="first-table" class="first-chosen-tab selectpicker" data-live-search="true"></select>
      </div>
    </div>
    <div class="first-selected-fields">
      <div class="form-group">
        <label class="control-label">
          {% trans %}
          Fields selection
          {% endtrans %}
        </label>
        <select id="first-fields" multiple="multiple"></select>
      </div>
    </div>
  </div>
	<div class="first-applied-constraints">
		<div class="form-horizontal">
			<div class="form-group">
				<div class="checkbox checkbox-inline">
					<strong>
						{% trans %}
						Constraints
						{% endtrans %}
					</strong>
					<label class="control-label" title data-toggle="tooltip" data-placement="right">
						<input type="checkbox" value="2" data-toggle="collapse" id="first-constraints" class="collapsed" aria-expanded="false" data-target="#collapseConstraints" autocomplete="off">
						<i class="fas fa-spinner fa-spin pull-right hidden" id="method-spinner"></i>
					</label>
				</div>
			</div>
		</div>
		<div class="panel-collapse collapse" id="collapseConstraints" aria-expanded="false">
			<div class="first-checked-constraints">
				<div id="initial-table-constraints" class="builder-basic"></div>
				<div class="btn-group">
					<button class="btn btn-warning reset" data-target="#initial-table-constraints">Reset
					</button>
				</div>
			</div>
		</div>
	</div>
</div>
