{% extends 'index.html.twig' %}

{# INDEX : SPECIMEN #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links =  ['adn','individulame'] %}

{% block action %}
    {{ parent() }}
    
    {% if is_granted('ROLE_PROJECT') %}
        <a href="{{ path( route_importfiles ) }}" class="btn btn-primary btn-sm" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
    {% else %}
        <a href="#" class="btn btn-primary btn-sm" style="background-color:lightgrey" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
    {% endif %}
{% endblock %}

{% block body %}        
    {# definition of collones to display  
    RQ! for sortable collones, suffix the field names with the names of tables tableName.fieldName #}
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="individu.id" data-type="numeric" data-visible="false">Id</th>
                <th data-column-id="station.codeStation" data-sortable="true">{{'Code station'|trans}}</th> 
                <th data-column-id="individu.codeIndTriMorpho" data-sortable="true">{{'Code ind tri morpho'|trans}}</th>           
                <th data-column-id="individu.codeIndBiomol" data-type="date">{{'Code ind biomol'|trans}}</th>
                <th data-column-id="voc.code" data-sortable="false">{{'Type individu voc fk'|trans}}</th>
                <th data-column-id="individu.codeTube" data-type="date">{{'Code tube'|trans}}</th>
                <th data-column-id="individu.numIndBiomol" data-type="date">{{'Num ind biomol'|trans}}</th>
                <th data-column-id="lastTaxname" data-sortable="false">{{'list.Last taxname'|trans}}</th> 
                <th data-column-id="lastdateIdentification" data-sortable="false" data-visible="false">{{'list.Last identification date'|trans}}</th> 
                <th data-column-id="codeIdentification" data-sortable="false" data-visible="false">{{'list.Last identification critere'|trans}}</th> 
                <th data-column-id="individu.dateMaj" data-width="100">{{'list.Date maj'|trans}}</th>
                <th data-column-id="individu.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="individu.userCre" data-width="10" data-visible="false">{{'list.User cre'|trans}}</th>
                <th data-column-id="individu.userMaj" data-width="10" data-visible="false">{{'list.User maj'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false"   data-width="20">{{'list.show'|trans}}</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false"  data-width="20">{{'list.edit'|trans}}</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">{{'list.delete'|trans}}</th>
                <th data-column-id="linkAdn" data-formatter="linkAdn" data-sortable="false" data-width="20">{{'list.linkAdn'|trans}}</th>
                <th data-column-id="linkIndividulame" data-formatter="linkIndividulame" data-sortable="false" data-width="20">{{'list.linkIndividulame'|trans}}</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}

