{% extends 'index.html.twig' %}

{# INDEX : EXTERNAL SEQUENCE #}

{# initialize the array of linked entities ([entity1, entity2 ...]) to which we wish to make a link-shortcuts
1) The table of results should include a collumn of the type: <th data-column-id = "linkEntity" data-formatter = "linkEntity" data-sortable = "false"> Col. </ Th>
2) the controller will have to return in the table rows the colloids of the type: "linkEntity1" => "patern1", "linkeEntity2" => "patern2" ... #}
{% set links =  [] %}

{% block action %}
    {{ parent() }}
    {% if is_granted('ROLE_COLLABORATION') %}
        <a href="{{ path( route_importfiles ) }}" class="btn btn-primary btn-sm" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
    {% else %}
        <a href="#" class="btn btn-primary btn-sm" style="background-color:lightgrey" role="button">{{['buton.Import',entityname|capitalize]|join|trans}}</a>
    {% endif %}
{% endblock %} 

{% block body %}     
    {# definition of collones to display  Num individu sqc ass ext
    RQ! for sortable collones, suffix the field names with the names of tables tableName.fieldName #} 
    <div class="table-responsive">        
    <table id="grid-basic" class="table table-condensed table-hover table-striped" >           
        <thead>
            <tr>
                <th data-column-id="sequenceAssembleeExt.id" data-type="numeric" data-visible="false">Id</th>
                <th data-column-id="sequenceAssembleeExt.codeSqcAssExt" data-sortable="true" data-visible="true">{{'Code sqc ass ext'|trans}}</th> 
                <th data-column-id="sequenceAssembleeExt.codeSqcAssExtAlignement" data-sortable="true" data-visible="false">{{'Code sqc ass ext alignement'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.accessionNumberSqcAssExt" data-sortable="true">{{'list.Accession number sqc ass ext'|trans}}</th>
                <th data-column-id="vocGene.code" data-sortable="true">{{'Gene voc fk'|trans}}</th>                
                <th data-column-id="sequenceAssembleeExt.dateCreationSqcAssExt" data-type="date">{{'list.Date creation sqc ass ext'|trans}}</th>
                <th data-column-id="vocDatePrecision.libelle" data-sortable="false">{{'Date precision voc fk'|trans}}</th>  
                <th data-column-id="lastTaxname" data-sortable="false" data-visible="true">{{'list.Last taxname'|trans}}</th>                 
                <th data-column-id="lastdateIdentification" data-sortable="false" data-visible="false">{{'list.Last identification date'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.taxonOrigineSqcAssExt" data-visible="false">{{'Taxon origine sqc ass ext'|trans}}</th>
                <th data-column-id="collecte.codeCollecte" data-visible="false">{{'Code collecte'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.numIndividuSqcAssExt" data-sortable="true" data-visible="false">{{'Num individu sqc ass ext'|trans}}</th>
                <th data-column-id="vocStatutSqcAss.code" data-sortable="true" data-visible="false">{{'Statut sqc ass voc fk'|trans}}</th>
                <th data-column-id="listSource" data-sortable="false" data-visible="false">{{'list.List source'|trans}}</th> 
                <th data-column-id="motuAssigne" data-sortable="false" data-visible="true">{{'list.MotuAssigne'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.dateMaj" data-width="100">{{'list.Date maj'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.dateCre" data-width="100" data-visible="false">{{'list.Date cre'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.userCre" data-width="10" data-visible="false">{{'list.User cre'|trans}}</th>
                <th data-column-id="sequenceAssembleeExt.userMaj" data-width="10" data-visible="false">{{'list.User maj'|trans}}</th>
                <th data-column-id="show" data-formatter="show" data-sortable="false"   data-width="20">{{'list.show'|trans}}</th>
                <th data-column-id="edit" data-formatter="edit" data-sortable="false"  data-width="20">{{'list.edit'|trans}}</th>
                <th data-column-id="delete" data-formatter="delete" data-sortable="false" data-width="20">{{'list.delete'|trans}}</th>
            </tr>
        </thead>
    </table>
    </div>       
{% endblock %}


